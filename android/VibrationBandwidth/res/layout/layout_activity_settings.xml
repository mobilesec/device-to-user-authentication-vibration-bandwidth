<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <TextView
        android:id="@+id/textview_vibration_recognition_test_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibration_recognition_test_length" />

    <EditText
        android:id="@+id/edittext_vibration_recognition_test_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />
    
    <TextView
        android:id="@+id/textview_vibration_recognition_min_req_pattern_plays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibration_recognition_min_req_repeats" />

    <EditText
        android:id="@+id/edittext_vibration_recognition_min_req_pattern_plays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />


</LinearLayout>